	% Para entornos matemáticos
	\newcommand{\be}{\begin{equation}}
	\newcommand{\ee}{\end{equation}}
	\newcommand{\ben}{\begin{equation*}}
	\newcommand{\een}{\end{equation*}}
	
	\newcommand{\eqn}[1]{\begin{equation} #1 \end{equation}}
	\newcommand{\eqnn}[1]{\begin{equation*} #1 \end{equation*}}
	
	% Derivadas parcial de #2 con respecto a #3 #1 veces (el argumento 1 es opcional)
	\newcommand{\dpar}[3][\hspace{-0.05em}]{\frac{\partial^{#1} {#2}}{\partial {#3}^{#1}}}
	\newcommand{\dtot}[3][\hspace{-0.05em}]{\frac{d^{#1} {#2}}{d {#3}^{#1}}}
	
	% Para poner índices a tensores
	\def\hx#1.#2.{_{#1}^{#2}}
	
	% Boldface para modo matemático y operadores varios
	\newcommand{\vb}[1]{\ifmmode\mathbf{#1}\else$\mathbf{#1}$\fi} % Vector
	\newcommand{\divem}[1]{\mathbf{\nabla}\mathbf{\cdot}\mathbf{#1}} % Divergencia
	\newcommand{\rotorm}[1]{\mathbf{\nabla}\times{#1}} % Rotor
	\newcommand{\lapm}[1]{\nabla^2{#1}} % Laplaciano
	\newcommand{\dparbis}[2]{\frac{\partial}{\partial #2}\left[ #1 \right]}
	\newcommand{\dparcru}[3]{\frac{\partial^2 #1}{\partial #3\partial #2}} % Derivada parcial 2da cruzada
	\newcommand{\ddpar}[2]{\frac{\partial^2 #1}{\partial #2^2}}
	
	% Una buena ´e´ de Euler
	\newcommand{\euler}{\mathrm{e}}
	
	% Para mecánica clásica
	\newcommand{\Lag}{\mathscr{L}} % Lagrangiano screen
	\newcommand{\Ham}{\mathscr{H}} % Hamiltoniano
	\newcommand{\Lagc}{\mathcal{L}} % Lagrangiano caligráfico
	\newcommand{\Hamc}{\mathcal{H}} % Hamiltoniano caligráfico
	\newcommand{\Or}[1]{\mathcal{O}\left(#1\right)} % Para escribir el orden de aprox. de un método
	
