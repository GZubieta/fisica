	% Entorno para notas marginales
	\newcommand{\notamargen}[1]{\marginnote{\bfseries\footnotesize{#1}}[-0.5cm]}
	
	% Entorno para la sección de problemas
	\newcounter{problemas_count}
	\newenvironment{problemas}
	{\vspace{6pt}\small {\bf PROBLEMAS}		
	\begin{list}{{\indent}\bf \arabic{section}.\arabic{problemas_count} }{
	\usecounter{problemas_count}
	\footnotesize
	\setlength{\labelsep}{1pt}
	\setlength{\leftmargin}{13pt}
	\setlength{\listparindent}{3pt}
	}
	}
	{\end{list}}
		
	% Entorno para la sección de notas Finales
	\newcounter{notas_contador}
	\newenvironment{notasfinales}
	{\vspace{6pt}\small {\bf NOTAS}		
	\begin{list}{{\indent}\bf \arabic{section}.\arabic{notas_contador} }{
	\usecounter{notas_contador}
	\footnotesize
	\setlength{\labelsep}{1pt}
	\setlength{\leftmargin}{0pt}
	\setlength{\labelwidth}{0pt}
	\setlength{\listparindent}{3pt}
	\setlength{\leftmargini}{0pt}
	}
	}
	{\end{list}}		
	
